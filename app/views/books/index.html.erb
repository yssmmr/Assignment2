
<div class = "books-wrap">
 <h1>Books</h1>

 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th></th>
     </tr>
   </thead>


   <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", book_path(book.id) %>
           <%= link_to "Edit", edit_book_path(book.id) %>
           <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
       </td>
     </tr>
     <% end %>
   </tbody>

 </table>

  <div class ="book-new">

   <h2>New book</h2>

   <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <%= form_with model: @book do |f| %>

    <div class = "field">
      <div>Title</div>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <div>Body</div>
      <%= f.text_area :body %>
    </div>

    <div class = "action">
      <%= f.submit 'Create Book' %>
    </div>

   <% end %>

  </div>

</div>